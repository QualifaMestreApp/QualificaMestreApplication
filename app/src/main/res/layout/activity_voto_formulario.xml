<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VotoFormularioActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="7dp">



        <TextView
            android:id="@+id/nompeProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Prof"
            android:textSize="21dp"
            android:layout_marginBottom="21dp"/>
       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="8dp"
           app:cardElevation="8dp">
           <LinearLayout
               android:background="@drawable/rec_gradient"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center">
           <TextView
               android:textColor="@color/secondaryColor"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didática"
            android:textSize="25dp"/>
           </LinearLayout>
       </android.support.v7.widget.CardView>
        <RadioGroup
            android:id="@+id/matrerialSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="14dp"
            android:paddingLeft="50dp">
            <RadioButton android:id="@+id/radio_inutil0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 - Finjo que entendi para evitar constrangimento"/>
            <RadioButton android:id="@+id/radio_antiguado0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 - Não sabe ensinar"/>
            <RadioButton android:id="@+id/radio_razoavel0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 - Razoavel"/>
            <RadioButton android:id="@+id/radio_bom0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 - Passa bem o conteúdo"/>
            <RadioButton android:id="@+id/radio_mudou_a_minha_vida0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 - Aprendo tudo só de olhar para ele"/>
        </RadioGroup>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:background="@drawable/rec_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:textColor="@color/secondaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conteúdo"
                    android:textSize="25dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <RadioGroup
            android:id="@+id/networkingSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:layout_marginBottom="14dp">
            <RadioButton android:id="@+id/radio_inutil1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 - Se dormir não perco nada"/>
            <RadioButton android:id="@+id/radio_antiguado1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 - Quase não da conteudo"/>
            <RadioButton android:id="@+id/radio_razoavel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 - Desinteressante e/ou desatualizado"/>
            <RadioButton android:id="@+id/radio_bom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 - Coerente, atualizado e interessante"/>
            <RadioButton android:id="@+id/radio_mudou_a_minha_vida1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wikipédia!"/>
        </RadioGroup>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:background="@drawable/rec_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:textColor="@color/secondaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flexibilidade"
                    android:textSize="25dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RadioGroup
            android:id="@+id/ajudaSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:layout_marginBottom="14dp">
            <RadioButton android:id="@+id/radio_inutil2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 - Extremamente intransigente"/>
            <RadioButton android:id="@+id/radio_antiguado2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 - Muito rigido"/>
            <RadioButton android:id="@+id/radio_razoavel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 - Na medida"/>
            <RadioButton android:id="@+id/radio_bom2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 - Flex"/>
            <RadioButton android:id="@+id/radio_mudou_a_minha_vida2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 - Total Flex"/>
        </RadioGroup>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:background="@drawable/rec_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:textColor="@color/secondaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperamento"
                    android:textSize="25dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RadioGroup
            android:id="@+id/conhecimentoSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:layout_marginBottom="14dp">
            <RadioButton android:id="@+id/radio_inutil3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 - Impossivel de lidar"/>
            <RadioButton android:id="@+id/radio_antiguado3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 - Perde a compostura"/>
            <RadioButton android:id="@+id/radio_razoavel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 - Não tem muita paciencia"/>
            <RadioButton android:id="@+id/radio_bom3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 - Muito tranquilo, bom temperamento"/>
            <RadioButton android:id="@+id/radio_mudou_a_minha_vida3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 - Quase um buda!"/>
        </RadioGroup>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <LinearLayout
                android:background="@drawable/rec_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:textColor="@color/secondaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assiduidade"
                    android:textSize="25dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RadioGroup
            android:id="@+id/assiduidadeSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:layout_marginBottom="14dp">
            <RadioButton android:id="@+id/radio_inutil4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 - Turista"/>
            <RadioButton android:id="@+id/radio_antiguado4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 - Quase nunca aparece"/>
            <RadioButton android:id="@+id/radio_razoavel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 - Falta bastante"/>
            <RadioButton android:id="@+id/radio_bom4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 - Falta poucas vezes"/>
            <RadioButton android:id="@+id/radio_mudou_a_minha_vida4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 - Pontualidade britanica!"
                />
        </RadioGroup>
        <Button
            android:background="@color/secondaryColor"
            android:id="@+id/confirmar_voto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Votar!"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</ScrollView>